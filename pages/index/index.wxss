.calculator {
  width: 100vw;
  height: 100vh;
  background-color: #282c34;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.screen {
  background-color: #ffffff;
  text-align: right;
  width: 100vw;
  height: calc(100vh / 8);
  padding: 0 2rem;
  box-sizing: border-box;
  border: 2px solid #ccc;
}
.current {
  margin-top: 1rem;
  font-weight: 600;
  font-size: 45rpx;
}
.btnGroup {
  display: flex;
  gap: 1rem;
}
.item {
  margin-top: 1rem;
  width: calc((100vw - 1rem) / 5);
  height: calc((100vw - 1rem) / 5);
  border-radius: 50%;
  background-color: blanchedalmond;
  text-align: center;
  line-height: calc((100vw - 3rem) / 5);
  font-size: 1.2rem;
}
.btnGroup:first-child .item, .item:nth-child(4n) {
  background-color: cadetblue;
  color: #ffffff;
}
.btnGroup:nth-child(5) .item:nth-child(1) {
  width: calc((100vw - 1rem) / 2.2);
  border-radius: 3rem;
}